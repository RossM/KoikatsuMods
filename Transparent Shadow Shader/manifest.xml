<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest schema-ver="1">
  <guid>Xyl.TransparentShadowShader</guid>
  <name>Transparent Shadow Shader</name>
  <version>0.1</version>
  <author>Xyl</author>
  <description>A shader that applies shadows to transparent objects.</description>
  <MaterialEditor>
    <Shader Name="Custom/TransparentShadow" AssetBundle="chara/xyl/transparent_shadow.unity3d" Asset="asset_TransparentShadow">
      <Property Name="NormalMap" Type="Texture" />
      <Property Name="ShadowColor" Type="Color" DefaultValue="0.8,0.8,0.8,1" />
      <Property Name="FakeRefraction" Type="Float" Range="-1,1" />
    </Shader>
    <Shader Name="Custom/Iridescent" AssetBundle="chara/xyl/transparent_shadow.unity3d" Asset="asset_Iridescent">
      <Property Name="MainTex" Type="Texture" />
      <Property Name="NormalMap" Type="Texture" />
      <Property Name="HairGloss" Type="Texture" />
      <Property Name="ColorMask" Type="Texture" />
      <Property Name="DetailMask" Type="Texture" />
      <Property Name="IridescenceRot" Type="Texture" DefaultValueAssetBundle="chara/xyl/transparent_shadow.unity3d" DefaultValue="gray50" />
      <Property Name="IridescenceMask" Type="Texture" />
      <Property Name="IridescenceTex" Type="Texture" DefaultValueAssetBundle="chara/xyl/transparent_shadow.unity3d" DefaultValue="irid_rainbow" />
      <Property Name="Color" Type="Color" />
      <Property Name="Color2" Type="Color" />
      <Property Name="Color3" Type="Color" />
      <Property Name="ShadowColor" Type="Color" />
      <Property Name="LineColor" Type="Color" />
      <Property Name="IridescenceAlpha" Type="Float" Range="0,1" />
      <Property Name="IridescenceV" Type="Float" Range="0,1" />
      <Property Name="SpeclarHeight" Type="Float" Range="0,1" />
      <Property Name="Cutoff" Type="Float" Range="0,1" />
      <Property Name="LineWidthS" Type="Float" Range="0,1" />
      <Property Name="IridescencePower" Type="Float" Range="0,1" />
      <Property Name="rimpower" Type="Float" Range="0,1" />
      <Property Name="rimV" Type="Float" Range="0,1" />
      <Property Name="shadowV" Type="Float" Range="0,2" />
      <Property Name="ShadowExtend" Type="Float" Range="0,1" />
      <Property Name="rimColor" Type="Color" />
      <Property Name="rimX" Type="Float" Range="0,1" />
    </Shader>
    <Shader Name="Debug/DetailMask" AssetBundle="chara/xyl/transparent_shadow.unity3d" Asset="asset_DebugDetailMask">
      <Property Name="DetailMask" Type="Texture" />
    </Shader>
    <Shader Name="Debug/Lighting" AssetBundle="chara/xyl/transparent_shadow.unity3d" Asset="asset_DebugLighting">
      <Property Name="NormalMap" Type="Texture" />
    </Shader>
  </MaterialEditor>
</manifest>